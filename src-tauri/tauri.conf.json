{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "revision",
  "version": "0.1.0",
  "identifier": "com.revision.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "revision",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "capabilities": [
        "default",
        "desktop-capability"
      ],
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**/*"
          ],
          "requireLiteralLeadingDot": false
        }
      }
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "tooltip": "revision"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "revision"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}